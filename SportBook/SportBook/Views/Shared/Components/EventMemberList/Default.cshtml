@foreach (var item in Model)
{
    <li class="list-group-item">
        <div class="d-flex">
            <div class="mr-2">
                @item.FkUserNavigation.Username
            </div>

            @if (item.FkUser != teamOwner.UserId && currentUser.UserId == teamOwner.UserId) //isOwner
            {
                <a id="@item.FkUser" class="btn btn-secondary ml-auto mr-2 removeMember"><i class="fa fa-user-slash" style="color:white"></i></a>
            }
        </div>

    </li>
}
@model SportBook.Models.Tournament

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Tournament</h4>
    <hr />
    <dl class="row" name="navBar">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaxParticipantAmt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxParticipantAmt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FkGameTypeNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FkGameTypeNavigation.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FkOwnerNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FkOwnerNavigation.Username)
        </dd>
    </dl>
</div>
<div class="mb-3">
    <a class="btn btn-secondary" asp-action="TournamentsEdit" asp-route-id="@Model.TournamentId" style="color:white; isolation:isolate">Edit</a> 
    <a style="margin-left:5px; color:white; isolation:isolate" onclick="location.href='@Url.Action("Tournaments", "Admin")'" class="btn btn-secondary" ><i class="fa fa-list" style="color:white; isolation:isolate"></i></a>
</div>
<div class="row">
    <iframe class="col-xl-7 col-md-12 col-sm-12 " src="@Model.TournamentUrl/module?theme=0" style="width:100%" height="650" frameborder="0" scrolling="auto" allowtransparency="true"></iframe>
</div>
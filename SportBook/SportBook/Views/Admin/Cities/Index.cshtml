@model IEnumerable<SportBook.Models.City>

@{
    ViewData["Title"] = "Cities";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
<h1>Cities</h1>
<form asp-controller="Admin" asp-action="Cities">
    <p>
        <div class="input-group" style="width:30%">
            <input type="text" class="form-control" name="name" placeholder="Search cities">
            <div class="input-group-append">
                <button type="submit" class="btn btn-secondary"><i class="fa fa-search"></i></button>
            </div>
        </div>
    </p>
</form>
<p>
    Create new
    <button style="margin-left:5px" onclick="location.href='@Url.Action("CitiesCreate", "Admin")'" class="btn btn-secondary"><i class="fa fa-plus"></i></button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="CitiesEdit" asp-route-id="@item.CityId"><i class="fa fa-edit"></i></a> 
                    <a asp-action="CitiesDetails" asp-route-id="@item.CityId"><i class="fa fa-info-circle"></i></a>
                    <a asp-action="CitiesDelete" asp-route-id="@item.CityId"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

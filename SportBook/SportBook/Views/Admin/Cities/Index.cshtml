@model IEnumerable<SportBook.Models.City>

@{
    ViewData["Title"] = "Cities";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="d-flex">
    <h1>Cities</h1>
    <div class="ml-auto col-sm-3 p-0">
        <p>
            <div class="input-group">
                <input id="myInput" type="text" class="form-control" name="title" placeholder="Search..." style="margin-right:5px">
                <div class="input-group-append">
                    <button class="btn btn-secondary"><i class="fa fa-search"></i></button>
                </div>
            </div>
        </p>
    </div>
</div>

<p>
    Create new
    <button style="margin-left:5px" onclick="location.href='@Url.Action("CitiesCreate", "Admin")'" class="btn btn-secondary"><i class="fa fa-plus"></i></button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="search">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="CitiesEdit" asp-route-id="@item.CityId"><i class="fa fa-edit"></i></a>
                    <a asp-action="CitiesDetails" asp-route-id="@item.CityId"><i class="fa fa-info-circle"></i></a>
                    <a asp-action="CitiesDelete" asp-route-id="@item.CityId"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#search tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
@model SportBook.Models.Location

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create</h1>

<h4>Location</h4>
<hr />
<div class="row" name="navBar">
    <div class="col-md-4">
        <form asp-action="LocationsCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Latitude" class="control-label"></label>
                <input asp-for="Latitude" class="form-control" />
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Longitude" class="control-label"></label>
                <input asp-for="Longitude" class="form-control" />
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FkCity" class="control-label"></label>
                <select asp-for="FkCity" class ="form-control" asp-items="ViewBag.FkCity"></select>
            </div>
            <div class="form-group">
                <label asp-for="FkGameType" class="control-label"></label>
                <select asp-for="FkGameType" class ="form-control" asp-items="ViewBag.FkGameType"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-secondary" />                
                <a style="margin-left:5px" onclick="location.href='@Url.Action("Locations", "Admin")'" class="btn btn-secondary"><i class="fa fa-list" style="color:white; isolation:isolate"></i></a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

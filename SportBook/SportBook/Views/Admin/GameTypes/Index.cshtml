@model IEnumerable<SportBook.Models.GameType>

@{
    ViewData["Title"] = "Game Types";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Game Types</h1>
<form asp-controller="Admin" asp-action="GameTypes">
    <p>
        <div class="input-group" style="width:30%">
            <input type="text" class="form-control" name="name" placeholder="Search game types">
            <div class="input-group-append">
                <button type="submit" class="btn btn-secondary"><i class="fa fa-search"></i></button>
            </div>
        </div>
    </p>
</form>
<p>
    Create new
    <button style="margin-left:5px" onclick="location.href='@Url.Action("GameTypesCreate", "Admin")'" class="btn btn-secondary"><i class="fa fa-plus"></i></button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsOnline)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <th>
                @Html.DisplayNameFor(model => model.IsOnline)
            </th>
            <td>
                <a asp-action="GameTypesEdit" asp-route-id="@item.GameTypeId"><i class="fa fa-edit"></i></a>
                <a asp-action="GameTypesDetails" asp-route-id="@item.GameTypeId"><i class="fa fa-info-circle"></i></a>
                <a asp-action="GameTypesDelete" asp-route-id="@item.GameTypeId"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>

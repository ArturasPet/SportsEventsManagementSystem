@model IEnumerable<SportBook.Models.EventInvitation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IsAccepted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FkEventNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FkUserNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IsAccepted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FkEventNavigation.EventId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FkUserNavigation.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EventInvitationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EventInvitationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EventInvitationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
